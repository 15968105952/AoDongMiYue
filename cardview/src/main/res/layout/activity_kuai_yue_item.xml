<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/kuai_yue_white_background"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    >
    <ImageView
        android:id="@+id/card_image_view"
        android:layout_width="327dp"
        android:layout_height="327dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pic2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/nickname"
                    android:layout_marginLeft="@dimen/left6"
                    android:text="@string/nickname_home_page"
                    />
                <LinearLayout
                    android:id="@+id/ll_sex"
                   android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/is_or_not_man_background"
                    >

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_woman" />
                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="@dimen/label10"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/tab_unchecked_color"

                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                >
                <TextView
                    android:id="@+id/tv1"
                    style="@style/videoshow_tab_background"
                    android:text="人很美"
                    />
                <TextView
                    android:id="@+id/tv2"
                    android:text="很会聊"
                    style="@style/videoshow_tab_background"
                    android:layout_marginLeft="4dp"
                    />
                <TextView
                    android:id="@+id/tv3"
                    style="@style/videoshow_tab_background"
                    android:text="身材超好"
                    android:layout_marginLeft="4dp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/headimage_init"
            app:roundAsCircle="true" />
        <ImageView
            android:id="@+id/iv_vip_or_not"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/icon_vip"
            />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="#F2F2F2"
    ></View>
</LinearLayout>