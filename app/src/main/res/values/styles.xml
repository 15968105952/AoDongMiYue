<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
    <!--分割线-->
    <style name="cut_off_rule">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--宽高-->
    <style name="lable">
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">42dp</item>
    </style>
    <!--首页顶部导航字体大小-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--下划线-->
    <style name="underline">
        <item name="android:layout_height">3.5dp</item>
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/select_image_background</item>
    </style>
    <!--tab字体设置-->
    <style name="tab_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_upload_normal</item>
    </style>
    <!--精选标签背景及自己设置-->
    <style name="tab_background">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/label</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/tab_unchecked_color</item>
        <item name="android:background">@drawable/square_white_bg</item>
        <item name="android:padding">1dp</item>
    </style>
    <!--视频秀标签背景及自己设置-->
    <style name="videoshow_tab_background">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/label</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:background">@drawable/videoshow_tab_background</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    <!--我的界面关注字体-->
    <style name="my_concern">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--我的界面关注字体-->
    <style name="my_concern_count">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!--我的界面竖杠-->
    <style name="my_vertical_bar">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">17dp</item>
    </style>
    <!--我的界面中间图片尺寸-->
    <style name="my_four_image">
        <item name="android:layout_height">89dp</item>
        <item name="android:layout_width">89dp</item>
    </style>
    <!--我的界面收费分割-->
    <style name="my_rl_Charge_signature">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--我的界面收费图片-->
    <style name="my_rl_Charge_signature_image">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">23dp</item>
       <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <!--我的界面收费设置-->
    <style name="my_rl_Charge_signature_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/color_black_333333</item>
    </style>

    <!--我的界面收费最右边图片-->
    <style name="my_rl_Charge_signature_image_right">
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--我的界面视频认证设置-->
    <style name="rl_video_auth">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
