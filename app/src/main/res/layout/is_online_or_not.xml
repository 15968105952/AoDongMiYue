<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/is_or_not_online_background"
        >
        <ImageView
            android:id="@+id/iv_is_online_or_not"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_shape_green"
            />
        <TextView
            android:id="@+id/tv_is_online_or_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线"
            android:layout_marginLeft="2dp"
            android:textSize="@dimen/label10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tab_unchecked_color"
            />
    </LinearLayout>
</RelativeLayout>