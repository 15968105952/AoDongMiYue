<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="205dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic2"
            />
        <include layout="@layout/is_online_or_not"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="152dp"
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_unchecked_color"
            android:textSize="@dimen/nickname"
            android:layout_marginLeft="@dimen/left6"
            android:text="@string/nickname_home_page"
            />
        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_marginTop="156dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal"
            android:background="@drawable/is_or_not_man_background"
            >

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_woman" />
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="@dimen/label10"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tab_unchecked_color"

            />
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="6dp"
       >
     <TextView
         android:id="@+id/tv1"
         style="@style/tab_background"
         android:text="人很美"
        />
       <TextView
           android:id="@+id/tv2"
           android:text="很会聊"
           style="@style/tab_background"
           android:layout_marginLeft="4dp"
           />
       <TextView
           android:id="@+id/tv3"
           style="@style/tab_background"
           android:text="身材超好"
           android:layout_marginLeft="4dp"
           >
     </TextView>
   </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
