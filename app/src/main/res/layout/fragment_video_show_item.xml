<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_video_show_item"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:background="@color/color_gray">
        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="410dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="351dp"
                    android:background="@drawable/picbig">

                    <include layout="@layout/is_online_or_not"></include>

                    <ImageView
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_movshow" />
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left6"
                        android:text="@string/nickname_home_page"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/nickname" />

                    <LinearLayout
                        android:id="@+id/ll_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/is_or_not_man_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/icon_woman" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="1dp"
                            android:text="20"
                            android:textColor="@color/tab_unchecked_color"
                            android:textSize="@dimen/label10"

                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        style="@style/videoshow_tab_background"
                        android:text="人很美" />

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/videoshow_tab_background"
                        android:layout_marginLeft="4dp"
                        android:text="很会聊" />

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/videoshow_tab_background"
                        android:layout_marginLeft="4dp"
                        android:text="身材超好" />

                    <TextView
                        android:id="@+id/tv4"
                        style="@style/videoshow_tab_background"
                        android:layout_marginLeft="4dp"
                        android:text="很懂事" />
                </LinearLayout>
                </LinearLayout>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/headImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/headimage_init"
                    app:roundAsCircle="true" />
                <ImageView
                    android:id="@+id/iv_vip_or_not"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="33dp"
                    android:background="@drawable/icon_vip"
                    />
            </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
